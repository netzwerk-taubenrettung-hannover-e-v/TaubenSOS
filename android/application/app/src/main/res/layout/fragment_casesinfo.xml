<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="c" type="de.unihannover.se.tauben2.model.entity.Case" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_background">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/design_default_color_background">

                <ImageView
                    android:id="@+id/status_card_image_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_status" />

                <TextView
                    android:id="@+id/distance_text_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no GPS available"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/distance_text_card_title"
                    app:layout_constraintStart_toStartOf="@+id/case_id_card_value"
                    app:layout_constraintTop_toTopOf="@+id/distance_text_card_title"
                    />

                <TextView
                    android:id="@+id/distance_text_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Entfernung:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priority_text_card_title" />

                <TextView
                    android:id="@+id/priority_text_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{``+ c.priority}"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/priority_text_card_title"
                    app:layout_constraintStart_toStartOf="@+id/case_id_card_value"
                    app:layout_constraintTop_toTopOf="@+id/priority_text_card_title"
                    />

                <TextView
                    android:id="@+id/priority_text_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Priorität:"
                    app:layout_constraintBottom_toTopOf="@+id/distance_text_card_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/elapsed_time_text_card_title" />

                <TextView
                    android:id="@+id/elapsed_time_text_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Eingereicht vor:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/case_id_card_title" />

                <TextView
                    android:id="@+id/elapsed_time_text_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{c.sinceString}"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/date_time_card_value"
                    app:layout_constraintStart_toEndOf="@+id/date_time_card_value"
                    app:layout_constraintTop_toTopOf="@+id/date_time_card_value"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/injury_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Verletzung:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/media_card_layout" />

                <LinearLayout
                    android:id="@+id/media_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/media_card_title">

                    <ImageView
                        android:id="@+id/media_00_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <ImageView
                        android:id="@+id/media_01_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <ImageView
                        android:id="@+id/media_02_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/case_id_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:text="#2018012345"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/case_id_card_title"
                    app:layout_constraintStart_toEndOf="@+id/case_id_card_title"
                    app:layout_constraintTop_toTopOf="@+id/case_id_card_title"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/user_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angenommen von:"
                    app:layout_constraintBottom_toBottomOf="@+id/accept_card_button"
                    app:layout_constraintStart_toStartOf="@+id/additional_information_card_textfield"
                    app:layout_constraintTop_toTopOf="@+id/accept_card_button"
                    />

                <TextView
                    android:id="@+id/media_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Medien:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/distance_text_card_title" />

                <TextView
                    android:id="@+id/user_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="no user assigned"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/user_card_title"
                    app:layout_constraintStart_toEndOf="@+id/user_card_title"
                    app:layout_constraintTop_toTopOf="@+id/user_card_title"
                    app:layout_constraintVertical_bias="0.0" />



                <ListView
                    android:id="@+id/injury_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/injury_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/injury_card_title" />

                <TextView
                    android:id="@+id/case_id_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="Case ID:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/date_time_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.06 14:12 Uhr (vor "
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/elapsed_time_text_card_title"
                    app:layout_constraintStart_toStartOf="@+id/case_id_card_value"
                    app:layout_constraintTop_toTopOf="@+id/elapsed_time_text_card_title"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accept_card_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="übernehmen"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additional_information_card_textfield" />


                <!--Necessary to make date display at report date work, needs to be implemented programmatically in the future for less spaghetti-->
                <TextView

                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/elapsed_time_text_card_value"
                    app:layout_constraintStart_toEndOf="@+id/elapsed_time_text_card_value"
                    app:layout_constraintTop_toTopOf="@+id/elapsed_time_text_card_value"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>